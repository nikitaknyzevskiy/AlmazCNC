<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <View
        android:id="@+id/item_open_file_background_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/selector_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_open_file_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="19dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_reg"
        android:letterSpacing="0.03"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:text="000000000000000000000000000000"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_open_file_background_view"
        app:layout_constraintEnd_toStartOf="@+id/item_open_file_arrow_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_open_file_background_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_open_file_file_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto_reg"
        android:maxLength="10"
        android:text="000000000000"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_open_file_background_view"
        app:layout_constraintEnd_toEndOf="@+id/item_open_file_text_view" />

    <ImageView
        android:id="@+id/item_open_file_arrow_right"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/ic_item_open_file_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/item_open_file_background_view"
        app:layout_constraintEnd_toEndOf="@+id/item_open_file_background_view"
        app:layout_constraintTop_toTopOf="@+id/item_open_file_background_view" />

</androidx.constraintlayout.widget.ConstraintLayout>