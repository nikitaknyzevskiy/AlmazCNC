<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/menuFragment">
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.rokobit.almaz.screen.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_motionFragment"
            app:destination="@id/motionFragment" />
        <action
            android:id="@+id/action_menuFragment_to_openFileFragment"
            app:destination="@id/openImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/motionFragment"
        android:name="com.rokobit.almaz.screen.MotionFragment"
        android:label="MotionFragment" />
    <fragment
        android:id="@+id/positionFragment"
        android:name="com.rokobit.almaz.screen.PositionFragment"
        android:label="PositionFragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.rokobit.almaz.screen.MainFragment"
        android:label="MainFragment" >
        <argument
            android:name="path"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/openImageFragment"
        android:name="com.rokobit.almaz.screen.OpenImageFragment"
        android:label="@string/open_file">
        <action
            android:id="@+id/action_openFileFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>